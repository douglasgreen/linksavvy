    <arg name="extensions" value="php" />

    <rule ref="PSR12">
        <properties>
            <property name="testVersion" value="7.3" />
        </properties>
    </rule>

    <file>bin/</file>
    <file>public/</file>
    <file>src/</file>
</ruleset>
